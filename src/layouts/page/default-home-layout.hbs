{{#extend "default-layout"}}	
	{{#replace "openHeader"}}<div id="head">{{/replace}}
	{{#append "headWrap"}}
	<div id="banner">
		<div id="banner_left"></div>
		<div id="banner_right">
			<ul style="" id="nav">
				<li id="prev"><a href="#">Previous</a></li>
				<li id="next"><a href="#">Next</a></li>
			</ul>
			<div style="overflow: hidden;" id="slideshow">
				<ul  id="slides">
					<li style="height:320px;">
						<img src="/resources/images/slide12.png" />
					</li>
					<li style="height:320px;">
						<img src="/resources/images/slide2.png" />
					</li>
					<li style="height:320px;">
						<img src="/resources/images/slide3.png" />
					</li>
				</ul>
			</div>
		</div>
	</div>
	{{/append}}
	{{#replace "closeHeader"}} {{/replace}}
	{{#replace "ribbon"}}
		<div class="full" id="ribbon">
			<table class="donate_bar" style="margin: 0 auto;" cellpadding="0" cellpadding="0" width="977px">
				<tr>
					<td  class="title"><h2 id="donate_left">Help Support Our Cause</h2></td>
					<td class="text">
						<p class="donate_mid">"For just a small monthly contribution you can help us continue our vital work."</p>
					</td>
					<td valign="top" class="butt">
						<form class="donate" action="https://www.paypal.com/cgi-bin/webscr" target="_blank" method="post">
							<input type="hidden" name="cmd" value="_donations">
							<input type="hidden" name="business" value="info@singlethemes.com">
							<input type="hidden" name="item_name" value="Donation">
							<input type="hidden" name="no_note" value="0">
							<input type="hidden" name="currency_code" value="USD">
							<input type="hidden" name="bn" value="PP-DonationsBF:btn_donateCC_LG.gif:NonHostedGuest">
							<input class="donate" type="submit" value="Donate Now"  border="0" name="submit">
						</form>
					</td>
				</tr>
			</table>
		</div>
		{{/replace}}

		{{#append "openContent"}}<div id="main">{{/append}}
		{{#replace "content"}}
		  {{#with page.content}}
		      {{> content/content}}
		  {{/with}}
		{{/replace}}
		{{#append "closeContent"}}</div>{{/append}}
		{{#append "footer"}}</div>{{/append}}
	{{#append "scripts"}}
	<script type="text/javascript">
	jQuery(document).ready(function(){
		jQuery("ul#slides").cycle({
			fx: 'fade',
			timeout: 5000,
			prev: '#prev',
			next: '#next',
			slideExpr: 'li'
		});
		var left = jQuery('#main').find('.block').first().html();
		jQuery('#main').find('.block').first().hide();
		jQuery('#banner_left').html(left);
	});</script>
	{{/append}}
{{/extend}}